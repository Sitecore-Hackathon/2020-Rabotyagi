<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
    <sitecore>
        <sites>
            <site patch:instead="site[@name='website']"
                  name="website"
                  siteResolving="true"
                  enableTracking="true"
                  virtualFolder="/"
                  physicalFolder="/"
                  hostName="stc9sc.dev.local"
                  rootPath="/sitecore/content"
                  startItem="/home"
                  database="web"
                  domain="extranet"
                  allowDebug="true"
                  cacheHtml="true"
                  htmlCacheSize="50MB"
                  registryCacheSize="0"
                  viewStateCacheSize="0"
                  xslCacheSize="25MB"
                  filteredItemsCacheSize="10MB"
                  enablePreview="true"
                  enableWebEdit="true"
                  enableDebugger="true"
                  disableClientData="false"
                  cacheRenderingParameters="true"
                  renderingParametersCacheSize="10MB"
                  languageEmbedding="Never"
                  alwaysIncludeServerUrl="true"
                  LowercaseUrls="true"/>
        </sites>
    </sitecore>
</configuration>